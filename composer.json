{
    "name": "dashweb-agency/textmorpher",
    "description": "Persistent text translation and database replacement tool for WordPress themes and plugins",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "keywords": [
        "wordpress",
        "plugin",
        "translation",
        "i18n",
        "localization",
        "text-override",
        "database-replacement"
    ],
    "authors": [
        {
            "name": "Dashweb.agency",
            "homepage": "https://dashweb.agency"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0",
        "wp-coding-standards/wpcs": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "TextMorpher\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TextMorpher\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress includes/",
        "phpcbf": "phpcbf --standard=WordPress includes/"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
